  "description": "Magnet adapter for boilerplate",
  "keywords": [
    "magnet",
    "magnetjs",
    "folder-loader"
  ],
  "homepage": "https://github.com/magnetjs/magnet-folder-loader#readme",
  "bugs": {
    "url": "https://github.com/magnetjs/magnet-folder-loader/issues"
  },
  "license": "MIT",
