  "files": [
    "README",
    "CHANGELOG.md",
    "dist"
  ],
  "main": "dist/index.js",
  "repository": "magnetjs/magnet-folder-loader",
  "scripts": {
    "build": "tsc",
    "dist": "npm run build && npm publish",
    "start": "tsc",
