    "require-all": "^2.2.0"
  },
  "devDependencies": {
    "concurrently": "^3.3.0",
    "nodemon": "^1.9.1",
    "standard": "^8.6.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.5.1",
    "ts-node": "^2.1.0",
    "typescript": "^2.2.1"
  },
  "engines": {
    "node": ">=6.9.5"
  }
